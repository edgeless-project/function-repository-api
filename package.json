{
  "name": "function-repository-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "files": [
    "/dist",
    "/locales",
    "/templates",
    "/static"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start --watch",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug_orig": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:debug": "cross-env NODE_ENV=development DEBUG=true nodemon --config nodemon-debug.json",
    "start:prod": "NODE_ENV=production node dist/main",
    "start:docker": "NODE_ENV=docker node dist/main",
    "prune:prod": "node-prune && cross-env NODE_ENV=production npm prune",
    "package:prod": "npm run build && npm run prune:prod",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "start:mongo": "docker start mongo-nest",
    "create:mongo": "docker run -p 0.0.0.0:27017:27017 --name mongo-nest -d mongo:4"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.13",
    "@types/mongoose": "^5.11.97",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsrsasign": "11.0.0",
    "mime": "^4.0.4",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "mongodb": "6.1.0",
    "mongoose": "^7.8.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.19",
    "@types/jest": "29.5.5",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.6",
    "@types/nodemailer": "^6.4.11",
    "@types/supertest": "^2.0.14",
    "eslint": "^8.51.0",
    "jest": "29.7.0",
    "node-prune": "^1.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@modules": "dist/modules",
    "@common": "dist/common",
    "@auth": "dist/modules/auth",
    "@contracts": "dist/contracts"
  }
}
